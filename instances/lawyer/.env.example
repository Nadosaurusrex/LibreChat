# AWS Bedrock
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_DEFAULT_REGION=eu-west-1

# LibreChat Secrets (generate with: scripts/generate-secrets.sh)
CREDS_KEY=CHANGE_ME
CREDS_IV=CHANGE_ME
JWT_SECRET=CHANGE_ME
JWT_REFRESH_SECRET=CHANGE_ME

# LiteLLM
LITELLM_MASTER_KEY=CHANGE_ME

# MongoDB
MONGO_URI=mongodb://mongodb:27017/LibreChat

# Meilisearch
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=CHANGE_ME

# PostgreSQL (pgvector)
POSTGRES_DB=rag_api
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=CHANGE_ME
DB_HOST=vectordb
DB_PORT=5432

# RAG API
RAG_PORT=8000
RAG_API_URL=http://rag_api:8000
EMBEDDINGS_PROVIDER=huggingface
EMBEDDINGS_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
COLLECTION_NAME=librechat_files
CHUNK_SIZE=8000
CHUNK_OVERLAP=400
PDF_EXTRACT_IMAGES=false

# LibreChat General
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false

# SearXNG
SEARXNG_INSTANCE_URL=http://searxng:8080

# Web search pipeline (placeholders to suppress API key dialog)
FIRECRAWL_API_KEY=not-needed
COHERE_API_KEY=not-needed
